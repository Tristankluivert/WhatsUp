<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slidebackground"
    tools:context=".fragments.GroupSlideFrag">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/groupslideillustration"
        android:layout_marginTop="50dp"
        />


    <com.kluivert.whatsup.Helper.fonts.QuicksandMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_gravity="center_horizontal"
        android:text="Groupchats got better with events"
        android:textSize="@dimen/slidemaintextsize"
        />


    <com.kluivert.whatsup.Helper.fonts.QuicksandRegular
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/slidetextonee"
        android:textSize="@dimen/slidesectextsize"
        />



</FrameLayout>